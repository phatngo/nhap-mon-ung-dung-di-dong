<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow">

    </ImageButton>
    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Biên Hòa"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="25dp">
    </TextView>
    <TextView
        android:id="@+id/textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nắng nóng "
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:textSize="15dp">
    </TextView>
    <TextView
        android:id="@+id/textview_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="28°C"
        android:textColor="#FF0000"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="30dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textview_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thứ 7"
            android:textSize="15dp"
            android:layout_weight="1"

            >
        </TextView>
        <TextView
            android:id="@+id/textview_status_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay"
            android:textSize="15dp"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/textview_maxtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max : 33°C"
            android:textSize="15dp"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/textview_mintemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Min : 27°C"
            android:textSize="15dp"
            android:layout_weight="1">
        </TextView>
    </LinearLayout>
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/line">
    </TextView>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="270dp"></ListView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:nestedScrollingEnabled="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">
            </TextView>

            <TextView
                android:id="@+id/txtview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hôm nay: hiện tại, có mây vài nơi, nhiệt độ cao nhất 33°, đêm nay có mây vài nơi nhiệt độ thấp nhất 22°"
                android:textSize="20dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="MT mọc"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="MT lặn"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textview_sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="06:06"
                    android:textSize="25dp"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/textview_sunset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="17:35"
                    android:textSize="25dp"
                    android:layout_weight="1"></TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Áp suất"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Độ ẩm"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textview_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1009hPa"
                    android:textSize="25dp"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/textview_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="49%"
                    android:textSize="25dp"
                    android:layout_weight="1"></TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Gió"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="Nhiệt độ cảm nhận"
                    android:textSize="15dp"
                    android:layout_weight="1"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textview_wind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3km/h"
                    android:textSize="25dp"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/textview_fell_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="36°C"
                    android:textSize="25dp"></TextView>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>